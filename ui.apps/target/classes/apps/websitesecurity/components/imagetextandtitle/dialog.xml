                    </subtitlecolor>
                    <Link_x0020_key
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter text of the Sub Title Link (For Home Page)"
                        fieldLabel="Subtitle Link Text"
                        maxLength="32"
                        name="./linkkey"
                        xtype="textfield"/>
                    <linkpathoverlay
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue=""
                        fieldDescription="Select Link Path Or Overlay"
                        fieldLabel="&#x9;&#xa;Link Path Or Overlay"
                        name="./linkpathoverlay"
                        type="select"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(box,value){var dlg = box.findParentByType('panel');if(value == &quot;link_overlay&quot;){dlg.getComponent('overlayID').show();dlg.getComponent('linkpathID').hide();dlg.getComponent('overlayID1').show();}else{dlg.getComponent('linkpathID').show();dlg.getComponent('overlayID').hide();dlg.getComponent('overlayID1').hide();}}"/>
                        <options jcr:primaryType="cq:WidgetCollection">
                            <path
                                jcr:primaryType="nt:unstructured"
                                text="Link Path"
                                value="linkpath"/>
                            <overlay
                                jcr:primaryType="nt:unstructured"
                                text="Overlay On Link"
                                value="link_overlay"/>
                        </options>
                    </linkpathoverlay>
                    <Link_x0020_value
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify the path for the Link"
                        fieldLabel="Link path"
                        itemId="linkpathID"
                        name="./linkvalue"
                        xtype="pathfield"/>
                    <textvidoverlay
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}true"
                        defaultValue=""
                        fieldDescription="Select Text or Video"
                        fieldLabel="Text or Video"
                        itemId="overlayID"
                        name="./textvidoverlay"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <textoverlay
                                jcr:primaryType="nt:unstructured"
                                text="Text Overlay"
                                value="textoverlay"/>
                            <vidoverlay
                                jcr:primaryType="nt:unstructured"
                                text="Video Overlay"
                                value="vidoverlay"/>
                        </options>
                    </textvidoverlay>
                    <dropdown
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Select Overlay"
                        fieldLabel="Overlay"
                        itemId="overlayID1"
                        name="./dropvalue"
                        options="/bin/websitesecurity/overlayoptions"
                        type="select"
                        value="text"
                        xtype="selection"/>
                    <Description
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        fieldDescription="Enter Description"
                        fieldLabel="Description"
                        name="./description"
                        removeSingleParagraphContainer="{Boolean}true"
                        validateValue="function(field){var temp=this.getValue();if(temp.length>350){this.markInvalid(&quot;Description should not exceed 350 characters&quot;);return false;}else if(temp.length == 0){this.markInvalid(&quot;Enter Description&quot;);return false;}else{this.clearInvalid();return true;}}"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <edit
                                jcr:primaryType="nt:unstructured"
                                features="[paste-wordhtml]"/>
                            <findreplace
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <spellcheck
                                jcr:primaryType="nt:unstructured"
                                features="*"
                                invalidStyle="background-color: #ffdddd;"/>
                            <undo
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <fontstyles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <fontstyle
                                        jcr:primaryType="cq:WidgetCollection"
                                        cssName="css"
                                        text="Description"/>
                                </styles>
                            </fontstyles>
                            <fontcolor
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <fontcolor
                                        jcr:primaryType="cq:WidgetCollection"
                                        cssName="css"
                                        text="Description"/>
                                </styles>
                            </fontcolor>
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <style
                                    jcr:primaryType="cq:WidgetCollection"
                                    cssName="richtext"
                                    text="Description"/>
                            </styles>
                        </rtePlugins>
