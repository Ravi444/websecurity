<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Help Me Choose"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <Title
                jcr:primaryType="cq:Panel"
                title="Properties">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter the title"
                        fieldLabel="Title"
                        maxLength="20"
                        name="./helpmechoosetitle"
                        xtype="textfield"/>
                    <titlepath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify the Path for the Title"
                        fieldLabel="Title Path"
                        name="./helpmechoosetitlepath"
                        xtype="pathfield"/>
                    <titlecolor
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Choose the color of the title text"
                        fieldLabel="Title Color"
                        name="./titlecolor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <charcoal_grey
                                jcr:primaryType="nt:unstructured"
                                text="Charcoal Grey"
                                value="charcoal_grey_font"/>
                            <grey
                                jcr:primaryType="nt:unstructured"
                                text="Grey"
                                value="grey_font"/>
                            <lightest_grey
                                jcr:primaryType="nt:unstructured"
                                text="Lightest Grey"
                                value="lightest_grey_font"/>
                            <light_grey
                                jcr:primaryType="nt:unstructured"
                                text="Light Grey"
                                value="light_grey_font"/>
                            <midgrey
                                jcr:primaryType="nt:unstructured"
                                text="Mid Grey"
                                value="midgrey_font"/>
                            <slate_grey
                                jcr:primaryType="nt:unstructured"
                                text="Slate Grey"
                                value="slate_grey_font"/>
                            <ash
                                jcr:primaryType="nt:unstructured"
                                text="Ash"
                                value="ash_font"/>
                            <yellow
                                jcr:primaryType="nt:unstructured"
                                text="Symantec Gold"
                                value="symantec_gold_font"/>
                            <pink
                                jcr:primaryType="nt:unstructured"
                                text="Pink"
                                value="pink_font"/>
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Sky Blue"
                                value="sky_blue_font"/>
                            <black
                                jcr:primaryType="nt:unstructured"
                                text="Black"
                                value="black_font"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="white_font"/>
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="green_font"/>
                            <purple
                                jcr:primaryType="nt:unstructured"
                                text="Purple"
                                value="purple_font"/>
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Red"
                                value="red_font"/>
                        </options>
                    </titlecolor>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter the description"
                        fieldLabel="Description"
                        maxLength="85"
                        name="./helpmechoosedesc"
                        xtype="textarea"/>
                    <selection
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Select the Background"
                        fieldLabel="Background Color"
                        name="./helpmechoosebgcolor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <gradient
                                jcr:primaryType="nt:unstructured"
                                text="Gradient"
                                value="blue-gradient-helpmechoose"/>
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Red"
                                value="red_bg"/>
                            <Symantec_x0020_Gold
                                jcr:primaryType="nt:unstructured"
                                text="Symantec Gold"
                                value="symantec_gold_bg"/>
                            <ash
                                jcr:primaryType="nt:unstructured"
                                text="Ash"
                                value="ash_bg"/>
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="green_bg"/>
                            <purple
                                jcr:primaryType="nt:unstructured"
                                text="Purple"
                                value="purple_bg"/>
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Sky Blue"
                                value="sky_blue_bg"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="white_bg"/>
                            <grey
                                jcr:primaryType="nt:unstructured"
                                text="Grey"
                                value="grey_bg"/>
                        </options>
                    </selection>
                </items>
            </Title>
        </items>
    </items>
</jcr:root>
