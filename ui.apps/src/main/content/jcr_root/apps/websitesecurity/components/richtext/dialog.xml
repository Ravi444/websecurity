<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Richtext"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <Title
                jcr:primaryType="cq:Panel"
                title="Richtext">
                <items jcr:primaryType="cq:WidgetCollection">
                    <linkborder
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Border required"
                        fieldLabel="Top Border"
                        name="./linkborder"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="customBorder-yes"/>
                            <no
                                jcr:primaryType="nt:unstructured"
                                defaultValue="customBorder-no"
                                text="No"
                                value="customBorder-no"
                                Value="customBorder-no"/>
                        </options>
                    </linkborder>
                    <prop1
                        jcr:primaryType="nt:unstructured"
                        externalStyleSheets="/etc/designs/websiteSecurity/clientlibs/template/baseclientlibs/css/baseclientlibs.css"
                        fieldDescription="Enter the description"
                        fieldLabel="Description"
                        name="./titleandtextdescription"
                        removeSingleParagraphContainer="{Boolean}true"
                        validateOnBlur="true"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <edit
                                jcr:primaryType="nt:unstructured"
                                features="\[&quot;paste-wordhtml&quot;]"/>
                            <findreplace
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <format jcr:primaryType="cq:WidgetCollection">
                                    <h4
                                        jcr:primaryType="nt:unstructured"
                                        description="Heading 4"
                                        tag="h4"/>
                                    <p
                                        jcr:primaryType="nt:unstructured"
                                        description="Paragraph"
                                        tag="p"/>
                                </format>
                            </paraformat>
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <spellcheck
                                jcr:primaryType="nt:unstructured"
                                features="*"
                                invalidStyle="background-color: #ffdddd;"/>
                            <undo
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <fontstyles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <fontstyle
                                        jcr:primaryType="cq:WidgetCollection"
                                        cssName="css"
                                        text="Description"/>
                                </styles>
                            </fontstyles>
                            <fontcolor
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <fontcolor
                                        jcr:primaryType="cq:WidgetCollection"
                                        cssName="css"
                                        text="Description"/>
                                </styles>
                            </fontcolor>
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <h4Size
                                        jcr:primaryType="nt:unstructured"
                                        cssName="h4Size"
                                        text="Font Size"/>
                                </styles>
                            </styles>
                            <colorpicker
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </prop1>
                    <top_x0020_padding_x0020_selection
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Choose Bottom Padding"
                        fieldLabel="Botttom Padding"
                        name="./richtexttoppadding"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <_x0032_0px
                                jcr:primaryType="nt:unstructured"
                                text="20px"
                                value="richtextpaddingtwenty"/>
                            <_x0034_0px
                                jcr:primaryType="nt:unstructured"
                                text="40px"
                                value="richtextpaddingfourty"/>
                            <nopadding
                                jcr:primaryType="nt:unstructured"
                                text="No Padding"
                                value="richtextpaddingzero"/>
                        </options>
                    </top_x0020_padding_x0020_selection>
                    <richtextmargin
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Choose Bottom Margin"
                        fieldLabel="Bottom Margin Required"
                        name="./richtextmargin"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <yes
                                jcr:primaryType="nt:unstructured"
                                text="Yes"
                                value="richtextbottommargin"/>
                            <no
                                jcr:primaryType="nt:unstructured"
                                text="No"
                                value="richtextnobottommargin"/>
                        </options>
                    </richtextmargin>
                </items>
            </Title>
        </items>
    </items>
</jcr:root>
