<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    modal="{Boolean}true"
    title="Local Navigation"
    width="1000"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <Component_x0020_details
                jcr:primaryType="cq:Panel"
                title="Menu Details">
                <items jcr:primaryType="cq:WidgetCollection">
                    <links
                        jcr:primaryType="cq:Widget"
                        fieldDescription="For best view enter 5 values."
                        fieldLabel="Links"
                        name="./links"
                        orderable="{Boolean}false"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="nt:unstructured"
                            xtype="ejstcustom"/>
                    </links>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter Title (for Mobile View)"
                        fieldLabel="Title"
                        maxLength="15"
                        name="./title1"
                        xtype="textfield"/>
                    <titlecolor
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Choose the color for Title"
                        fieldLabel="Title color"
                        name="./titlecolor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <charcoal_grey
                                jcr:primaryType="nt:unstructured"
                                text="Charcoal Grey"
                                value="charcoal_grey_font"/>
                            <grey
                                jcr:primaryType="nt:unstructured"
                                text="Grey"
                                value="grey_font"/>
                            <lightest_grey
                                jcr:primaryType="nt:unstructured"
                                text="Lightest Grey"
                                value="lightest_grey_font"/>
                            <light_grey
                                jcr:primaryType="nt:unstructured"
                                text="Light Grey"
                                value="light_grey_font"/>
                            <midgrey
                                jcr:primaryType="nt:unstructured"
                                text="Mid Grey"
                                value="midgrey_font"/>
                            <slate_grey
                                jcr:primaryType="nt:unstructured"
                                text="Slate Grey"
                                value="slate_grey_font"/>
                            <ash
                                jcr:primaryType="nt:unstructured"
                                text="Ash"
                                value="ash_font"/>
                            <yellow
                                jcr:primaryType="nt:unstructured"
                                text="Symantec Gold"
                                value="symantec_gold_font"/>
                            <pink
                                jcr:primaryType="nt:unstructured"
                                text="Pink"
                                value="pink_font"/>
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Sky Blue"
                                value="sky_blue_font"/>
                            <black
                                jcr:primaryType="nt:unstructured"
                                text="Black"
                                value="black_font"/>
                            <white
                                jcr:primaryType="nt:unstructured"
                                text="White"
                                value="white_font"/>
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="green_font"/>
                            <purple
                                jcr:primaryType="nt:unstructured"
                                text="Purple"
                                value="purple_font"/>
                            <red
                                jcr:primaryType="nt:unstructured"
                                text="Red"
                                value="red_font"/>
                        </options>
                    </titlecolor>
                    <Link_x0020_key
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Enter the Text for Button"
                        fieldLabel="Button Text"
                        maxLength="20"
                        name="./menurightlinkkey"
                        xtype="textfield"/>
                    <Link_x0020_value
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Specify the Path for Button"
                        fieldLabel="Button Path"
                        name="./menurightlinkvalue"
                        xtype="pathfield"/>
                </items>
            </Component_x0020_details>
        </items>
    </items>
</jcr:root>
